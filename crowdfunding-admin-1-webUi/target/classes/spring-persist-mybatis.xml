<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	
	<!-- 扫描adminService -->
	<context:component-scan base-package="com.allen.crowd.funding.*"></context:component-scan>
	
	<!-- 加载外部属性文件 -->
	<context:property-placeholder location="classpath:jdbc.properties" />	
	
	<!-- 配置数据源 -->
	<bean id="dataSource" class="com.alibaba.druid.pool.DruidDataSource">
		<property name="username" value="${jdbc.user}"/>
		<property name="password" value="${jdbc.password}"/>
		<property name="url" value="${jdbc.url}"/>
		<property name="driverClassName" value="${jdbc.driver}"/>
	</bean>
	
	<!-- 配置SqlSessionFactoryBean -->
	<bean id="sqlSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
		<!-- mybatis配置文件所在的位置 -->
		<property name="configLocation" value="classpath:mybatis/mybatis-config.xml"></property>
		
		<!-- 配置mapper配置文件所在位置 -->
		<property name="mapperLocations" value="classpath:mybatis/mapper/*Mapper.xml"></property>
		
		<!-- 装配数据源 -->
		<property name="dataSource" ref="dataSource"></property>
		
		<!--配置pageHelper插件-->
        <property name="plugins">
            <array>
                <!--配置pageHelper全类名-->
                <bean class="com.github.pagehelper.PageInterceptor">
                    <property name="properties">
                    	<!-- <value>
                    		helperDialect=mysql
                			reasonable=true
                    	</value> -->
                        <props>
                        	<!-- 数据库方言，指定数据库类型为mysql -->
                            <prop key="helperDialect">mysql</prop>
                            
                           	<!--  配置自动修正页码     pageNo有效范围：1~总页数 -->
                            <prop key="reasonable">true</prop>
                        </props>
                    </property>
                </bean>
            </array>
        </property>
	</bean>
	
	<!-- 配置mybatis扫描器 -->
	<bean id="mapperScannerConfiguer" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<!-- 指定mapper接口所在的包    扫描包下所有的接口-->
		<property name="basePackage" value="com.allen.crowd.funding.mapper"></property>
	</bean>
	
	
</beans>